<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/view_Tela"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtProduto"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:hint="Nome do Produto"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btnInserir"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:background="@drawable/round_send_black_20" />
        <!--            android:text="Inserir"-->
        <!--            android:textColor="@color/black" />-->
    </LinearLayout>

    <Switch
        android:id="@+id/switch_cor"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Ativar Modo Escuro"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ListView
        android:id="@+id/listViewProdutos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tsC">
    </ListView>

</LinearLayout>